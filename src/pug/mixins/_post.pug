mixin post(title, image, description, job, link)
    .c-post.c-work__post
        .row(class='o-full-width\@down-xs')
            .col-12
                img.c-post__image(src= image)
        .row
            .col-12.col-sm-9.order-1.order-sm-0
                h3.c-post__title= title
            .col-12.col-sm-3.order-3.order-sm-0.c-post__job
                h5.u-gray-text= job
            .col-12.col-sm-7.order-2.order-sm-0
                p.c-post__description= description
            .col-auto.col-sm.c-post__link.order-4.order-sm-0.u-flex-align__rt
                a.c-link.c-link__arrow(href= link)
                    span The Process
                    include ../partials/_arrow