mixin navContent
    .row
        .col
            a.c-nav__mail(href='mailto:business@dragossargu.com').
                business@dragossargu.com
        .col-auto(
            class = mobileNav ?
                'o-mobile-nav-poz': '')
            ul.o-list
                li.c-nav__link
                    a(target='_blank', href='https://twitter.com/dragos_sargu').
                        Twitter
                li.c-nav__link
                    a(target='_blank', href='https://dribbble.com/dragos_sargu').
                        Dribbble
                li.c-nav__link
                    a(target='_blank', href='https://www.behance.net/dragos_sargu?fbclid=IwAR1T7mY5uI0hyMioCgI-bkggJFNc1HRHWi1pLz1CHRBNYNB9dc3Q5s1gMD0') Behance
            if mobileNav
                ul.o-mobile-list
                    li.c-nav__mobile-link.u-flex-align__cc
                        a(target='_blank', href='https://dribbble.com/dragos_sargu')
                            img.o-icon.o-icon__dribbble(src='images/icon/dribbble.svg', alt='')
                    li.c-nav__mobile-link.u-flex-align__cc
                        a(target='_blank', href='https://www.behance.net/dragos_sargu?fbclid=IwAR1T7mY5uI0hyMioCgI-bkggJFNc1HRHWi1pLz1CHRBNYNB9dc3Q5s1gMD0')
                            img.o-icon.o-icon__behance(src='images/icon/behance.svg', alt='')
                    li.c-nav__mobile-link.u-flex-align__cc
                        a(target='_blank', href='https://twitter.com/dragos_sargu')
                            img.o-icon.o-icon__twitter(src='images/icon/twitter.svg', alt='')

if outerNav
    .c-nav.c-nav--big(
        class = hideNavMobile ?
            'u-display-none@down-xs': '')
        .container
            +navContent
else
    .c-nav(
        class = hideNavMobile ?
            'u-display-none@down-xs': '')
        +navContent
