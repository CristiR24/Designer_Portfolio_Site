    style.
        .typed-text {
            position: absolute;
            padding-right: 10px;
        }

        .typed-placeholder {
            visibility: hidden;
        }

        .typed {
            position: relative;
            display: inline-block;
            margin-right: -2px;
        }

        .typed::after {
            position: absolute;
            content: '';
            background-color: #B4D5FE;
            height: 100%;
            width: 0;
            right: 0;
            opacity: .35;
            transform: translateY(.2em);
        }

        .typed-cursor--blink {
            animation: typedjsBlink 1s infinite !important
            -webkit-animation: typedjsBlink 1s infinite !important;
            animation: typedjsBlink 1s infinite !important;
        }

        .faded::after {
            transition: width .3s;
            width: 100%;
        }

